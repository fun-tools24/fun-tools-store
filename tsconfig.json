{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",

    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
